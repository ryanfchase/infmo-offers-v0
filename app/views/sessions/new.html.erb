<div class="bg-white rounded-lg shadow-lg p-8">
  <h1 class="text-3xl font-bold mb-6">Log in</h1>

  <%= form_with(url: signin_path, scope: :session, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :username, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :user_name, class: "w-full border rounded-lg py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password, class: "w-full border rounded-lg py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded-md btn-sm" %>
    </div>
  <% end %>
</div>